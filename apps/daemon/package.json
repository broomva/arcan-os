{
  "name": "@agent-os/daemon",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": {
    "agent-os-daemon": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/broomva/agent-os.git",
    "directory": "apps/daemon"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agent-os/context": "workspace:*",
    "@agent-os/core": "workspace:*",
    "@agent-os/engine-adapter": "workspace:*",
    "@agent-os/event-store": "workspace:*",
    "@agent-os/memory": "workspace:*",
    "@agent-os/observability": "workspace:*",
    "@agent-os/run-manager": "workspace:*",
    "@agent-os/skills": "workspace:*",
    "@agent-os/tool-kernel": "workspace:*",
    "@ai-sdk/anthropic": "^3.0.42",
    "@ai-sdk/openai": "^3.0.27",
    "@elysiajs/openapi": "^1.4.14",
    "@sinclair/typebox": "^0.34.48",
    "@t3-oss/env-core": "^0.13.10",
    "ai": "^6.0.81",
    "elysia": "^1.4.24",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@agent-os/tsconfig": "workspace:*",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "bun-types": "latest",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3"
  }
}
