{
  "name": "@arcan-os/engine-adapter",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/broomva/arcan-os.git",
    "directory": "packages/engine-adapter"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.9.3",
    "@arcan-os/tsconfig": "workspace:*"
  },
  "dependencies": {
    "@arcan-os/core": "workspace:*",
    "@arcan-os/event-store": "workspace:*",
    "@arcan-os/run-manager": "workspace:*",
    "@arcan-os/tool-kernel": "workspace:*",
    "ai": "^6.0.81",
    "@ai-sdk/anthropic": "^3.0.42",
    "@ai-sdk/openai": "^3.0.27",
    "zod": "^4.3.6"
  }
}
