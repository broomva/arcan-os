{
  "name": "arcan-os",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "An event-sourced AI agent runtime. Install everything with a single package.",
  "bin": {
    "arcan": "./bin/arcan.js",
    "arcand": "./bin/arcand.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "@arcan-os/core",
      "types": "@arcan-os/core"
    },
    "./memory": {
      "import": "@arcan-os/memory",
      "types": "@arcan-os/memory"
    },
    "./engine": {
      "import": "@arcan-os/engine-adapter",
      "types": "@arcan-os/engine-adapter"
    }
  },
  "files": [
    "dist",
    "bin",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/broomva/arcan-os.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@arcan-os/core": "workspace:*",
    "@arcan-os/event-store": "workspace:*",
    "@arcan-os/run-manager": "workspace:*",
    "@arcan-os/tool-kernel": "workspace:*",
    "@arcan-os/engine-adapter": "workspace:*",
    "@arcan-os/memory": "workspace:*",
    "@arcan-os/observability": "workspace:*",
    "@arcan-os/context": "workspace:*",
    "@arcan-os/skills": "workspace:*",
    "@arcan-os/cli": "workspace:*",
    "@arcan-os/arcand": "workspace:*"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.9.3",
    "@arcan-os/tsconfig": "workspace:*"
  }
}
