{
  "name": "@arcan-os/observability",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/broomva/agent-os.git",
    "directory": "packages/observability"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && tsc --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.9.3",
    "@arcan-os/tsconfig": "workspace:*"
  },
  "dependencies": {
    "@arcan-os/core": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^2.5.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0"
  },
  "optionalDependencies": {
    "langsmith": "^0.5.2"
  }
}
